@using System.Web.Optimization
@using OW.Experts.WebUI.CompositionRoot.HtmlHelpers
@using OW.Experts.WebUI.Infrastructure

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/css/site")
    @Styles.Render("~/css/bootstrap")
    @Scripts.Render("~/js/modernizr")
</head>
<body>
<div class="navbar navbar-default navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <b>
                @Html.ActionLink("OW", "Index", "Home", new {area = ""}, new {@class = "navbar-brand"})
            </b>
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                @if (User.IsInRole(RoleNames.Admin)) {
                    @Html.MenuItem("Тестирование", "Index", "Admin")
                }
                else {
                    @Html.MenuItem("Тестирование", "Index", "Expert")
                }
            </ul>
            @Html.Partial("Partial/_Login")
        </div>
    </div>
</div>

<div class="container body-content">
    @RenderBody()
    <hr/>
    <footer>
        <p>&copy; 2015 - @DateTime.Now.Year - OW</p>
    </footer>
</div>

@Scripts.Render("~/js/jquery")
@Scripts.Render("~/js/bootstrap")
@RenderSection("Scripts", false)
</body>
</html>