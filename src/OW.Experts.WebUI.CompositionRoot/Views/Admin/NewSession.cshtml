@model OW.Experts.WebUI.ViewModels.Admin.NewSessionViewModel

@{
    ViewBag.Title = "NewSession";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Начать новую сессию</h2>

<div class="alert alert-info">
    <p>
        Базовое понятие может состоять только из букв латинского или кирилического алфавитов
    </p>
</div>

@using (Html.BeginForm("NewSession", "Admin", FormMethod.Post, new { @class = "form-horizontal", role = "form" })) {
    @Html.AntiForgeryToken()
    <hr/>
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.BaseNotion, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.BaseNotion, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.BaseNotion, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Начать сессию"/>
        </div>
    </div>
}